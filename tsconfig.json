{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": [
      "node"
    ],
    "lib": [
      "ESNext",
      "DOM"
    ],
    
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@/*": 
      ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx", 
    "src/**/*.vue"
    ],
  "exclude": [
    "node_modules",
    "tests"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
